<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--MyBank Beans-->
    <bean id="myController" class="ioc.mybank_fixed.FixedDepositController">
        <constructor-arg index="0" ref="myService"/>
    </bean>
    <bean id="myService" class="ioc.mybank_fixed.FixedDepositService"/>
    <!--Car Beans-->
    <bean id="electricityService" class="ioc.multiple_services_fixed.ElectricityService"/>
    <bean id="engineService" class="ioc.multiple_services_fixed.EngineService"/>
    <bean id="fuelPompService" class="ioc.multiple_services_fixed.FuelPompService"/>
    <bean id="oilPompService" class="ioc.multiple_services_fixed.OilPompService"/>
    <bean id="safetyService" class="ioc.multiple_services_fixed.SafetyService"/>
    <bean id="carController" class="ioc.multiple_services_fixed.CarController">
        <constructor-arg index="0" ref="engineController"/>
        <constructor-arg index="1" ref="electricityService"/>
        <constructor-arg index="2" ref="safetyService"/>
    </bean>
    <bean id="engineController" class="ioc.multiple_services_fixed.EngineController">
        <constructor-arg index="0" ref="fuelPompService"/>
        <constructor-arg index="1" ref="oilPompService"/>
        <constructor-arg index="2" ref="engineService"/>
    </bean>
</beans>